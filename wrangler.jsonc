/**
 * For more details on how to configure Wrangler, refer to:
 * https://developers.cloudflare.com/workers/wrangler/configuration/
 */
{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "mcp-memory",
  "main": "src/index.ts",
  "compatibility_date": "2025-03-10",
  "compatibility_flags": ["nodejs_compat"],
  "migrations": [
    {
      "new_sqlite_classes": ["MyMCP", "SessionManager"],
      "tag": "v1"
    }
  ],
  "unsafe": {
    "bindings": [
      {
        "name": "RATE_LIMITER",
        "type": "ratelimit",
        "namespace_id": "1001",
        "simple": {
          "limit": 100,
          "period": 60
        }
      }
    ]
  },
  "d1_databases": [
    {
      "binding": "DB",
      "database_name": "mcp-memory",
      "database_id": "e7198b51-3080-4a23-b089-37b30315198d"
    }
  ],
  "durable_objects": {
    "bindings": [
      {
        "class_name": "MyMCP",
        "name": "MCP_OBJECT"
      },
      {
        "class_name": "SessionManager",
        "name": "SESSION_MANAGER"
      }
    ]
  },
  "observability": {
    "enabled": true
  },
  "ai": {
    "binding": "AI"
  },
  "assets": {
    "directory": "./static/",
    "binding": "ASSETS"
  },
  "vectorize": [
    {
      "binding": "VECTORIZE",
      "index_name": "mcp-memory"
    }
  ]
}
